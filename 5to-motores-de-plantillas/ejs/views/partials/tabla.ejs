<!-- historial table -->
<h1>Tabla de productos</h1>
<link rel="stylesheet" href="ejemplo1.css">
<table class="table">
    <thead>
        <tr>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
        </tr>
    </thead>
    <tbody>
        <!-- if no ListadeProductos -->
        <% if (ListadeProductos.length === 0) { %>
            <tr>
                <td colspan="3" id="no_hay">No hay Productos</td>
            </tr>
        <% }else{ %>
        
        <% for (let i = 0; i < ListadeProductos.length; i++) { %>
            <tr>
                <td><%=ListadeProductos[i].nombre_del_producto%></td>
                <td><%="$"+ListadeProductos[i].precio%></td>
                <td><%=ListadeProductos[i].logo%></td>
            </tr>
        <% } } %>
    </tbody>
</table>

<a href="http://localhost:8080">
    <button onclick="retu" type="submit" class="btn btn-primary">Volver al Formulario</button>
</a>